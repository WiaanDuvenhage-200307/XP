<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingsActivity"
    android:background="@drawable/ic_activity_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go Back"
            android:textAllCaps="false"
            android:fontFamily="@font/ralewayregular"
            app:icon="@drawable/ic_arrow_left"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ralewaybold"
            android:text="Settings"
            android:textColor="@color/red"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/ralewayregular"
            android:textColor="@color/white"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:layout_marginBottom="40dp"
            android:text="Reset your highscore or read some information about the app here"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="20sp"
            android:text="Reset Scores"
            android:layout_gravity="center"
            android:fontFamily="@font/ralewayregular"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is XP?"
            android:fontFamily="@font/ralewaybold"
            android:textColor="@color/red"
            android:textSize="25sp"
            android:paddingLeft="30sp"
            android:layout_marginBottom="23dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aboutApp"
            android:fontFamily="@font/ralewayregular"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingLeft="30sp"
            android:paddingRight="30sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aboutApp2"
            android:fontFamily="@font/ralewayregular"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingLeft="30sp"
            android:paddingRight="30sp"
            android:layout_marginBottom="10dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Developer"
            android:fontFamily="@font/ralewaybold"
            android:textColor="@color/red"
            android:textSize="25sp"
            android:paddingLeft="30sp"
            android:layout_marginBottom="23dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aboutMe"
            android:fontFamily="@font/ralewayregular"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingLeft="30sp"
            android:paddingRight="30sp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aboutMe2"
            android:fontFamily="@font/ralewayregular"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:paddingLeft="30sp"
            android:paddingRight="30sp"
            android:layout_marginBottom="10dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/me"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ralewayregular"
            android:textColor="@color/white"
            android:text="This is Me"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:id="@+id/ll_github"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/github"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WiaanDuvenhage-200307"
                android:layout_gravity="center"
                android:fontFamily="@font/ralewaybold"
                android:textColor="@color/white"/>

        </LinearLayout>




    </LinearLayout>




</ScrollView>